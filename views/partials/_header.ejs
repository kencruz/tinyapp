<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if (user) { %>
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% } %>
      <div class="navbar-nav ml-auto d-flex">
        <% if (user) { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group">
            <label class="mr-2" for="username"
              >Logged in as: <%= user.email %></label
            >
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </div>
        </form>
        <% } else { %>
        <a class="nav-item nav-link" href="/register">Sign up</a>
        <a class="nav-item nav-link" href="/login">Log in</a>
        <% } %>
      </div>
    </div>
  </nav>
</header>

